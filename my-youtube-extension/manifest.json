{
  "manifest_version": 3,
  "name": "YouTube Video URL Saver",
  "version": "1.1",
  "description": "Automatically saves YouTube video links into a single text file.",
  "permissions": [
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/watch*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
